# Per Branch configuration / overrides.
branches:
  master:
   tag:    "latest"
   server: "docker.io"
   creds:  "ascend6-docker-io"

  staging:
    tag:    "staging"

  rc*:
    # all RC branches will be built using defaults but tag will be the branch.
    tag: "{{.branch}}" 

